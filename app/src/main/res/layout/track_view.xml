<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/TrackWrapper">

    <ImageView
        android:id="@+id/artworkUrl100"
        android:layout_width="45dp"
        android:layout_height="45dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        style="@style/TrackInfo">

        <TextView
            android:id="@+id/trackName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Smells Like Teen Spirit Smells Like Teen Spirit Smells Like Teen Spirit"
            style="@style/TrackName" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/artistName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TrackDescription"
                tools:text="Nirvana N ir van aNirvana NirvanaNirvana Nirvana Nirvana Nirvana" />

            <ImageView
                android:layout_width="3dp"
                android:layout_height="3dp"
                android:layout_gravity="center"
                android:src="@drawable/ellipse_icon"
                style="@style/TrackDot" />

            <TextView
                android:id="@+id/trackTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TrackDescription"
                tools:text="5:01" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="8dp"
        android:layout_height="14dp"
        android:layout_gravity="end|center_vertical"
        android:src="@drawable/arrow_forward_icon"
        style="@style/TrackMore" />
</LinearLayout>