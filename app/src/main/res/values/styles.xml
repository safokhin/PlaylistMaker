<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonMainActivity" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/text_size_xl</item>
        <item name="cornerRadius">@dimen/radius_lg</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/spacing_xs</item>
        <item name="iconTint">@color/black</item>
    </style>
    <style name="ButtonSettingsActivity" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height_settings</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_md</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/spacing_sm</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="iconGravity">end</item>
        <item name="iconPadding">@dimen/spacing_xs</item>
        <item name="iconTint">@color/gray</item>
    </style>
    <style name="EditTextSearch" parent="Widget.AppCompat.EditText">
        <item name="android:inputType">text</item>
        <item name="android:lines">1</item>
        <item name="android:maxLength">150</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:background">@drawable/corner_edit_text</item>
        <item name="android:backgroundTint">@color/gray_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:drawableStart">@drawable/search_icon</item>
        <item name="android:drawablePadding">@dimen/spacing_xs</item>
        <item name="android:drawableTint">@color/gray</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_md</item>
    </style>
    <style name="EditTextSearchClear">
        <item name="android:tint">@color/gray</item>
    </style>
    <style name="Placeholder">
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">102dp</item>
    </style>
    <style name="PlaceholderImage">
        <item name="android:layout_marginBottom">@dimen/spacing_sm</item>
    </style>
    <style name="PlaceholderText">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/text_size_lg</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="PlaceholderButton">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/text_size_sm</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">54dp</item>
    </style>
</resources>
