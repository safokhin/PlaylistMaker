<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TrackWrapper">
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:paddingVertical">@dimen/spacing_xs</item>
    </style>
    <style name="TrackInfo">
        <item name="android:orientation">vertical</item>
        <item name="android:paddingHorizontal">@dimen/spacing_xs</item>
    </style>
    <style name="TrackName">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_md</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">400</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="TrackDescription">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/text_size_xs</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">400</item>
        <item name="android:maxLength">30</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="TrackDot">
        <item name="android:tint">@color/gray</item>
        <item name="android:layout_marginHorizontal">5dp</item>
    </style>
    <style name="TrackMore">
        <item name="android:tint">@color/gray</item>
        <item name="android:layout_marginHorizontal">@dimen/spacing_xs</item>
    </style>
    <style name="TrackNamePlayer" parent="TrackName">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_xl</item>
    </style>
    <style name="TrackArtistPlayer">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_sm</item>
        <item name="android:fontWeight">400</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="TimeTrackPlayer">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_sm</item>
        <item name="android:fontWeight">500</item>
    </style>
    <style name="DescriptionTrackPlayer">
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_sm</item>
        <item name="android:fontWeight">400</item>
    </style>
    <style name="ValueTrackPlayer">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_sm</item>
        <item name="android:fontWeight">400</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>
